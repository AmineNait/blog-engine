@model BlogAdmin.Models.HomeViewModel

@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-4">Welcome to the "Blog Engine"</h1>
        <p class="lead">Manage your categories and posts easily.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h2 class="mb-0">Categories</h2>
                    <a asp-action="Create" asp-controller="Category" class="btn btn-primary btn-sm">Add</a>
                </div>
                <ul class="list-group">
                    @foreach (var category in Model.Categories)
                    {
                        <li class="list-group-item">
                            <a asp-action="Edit" asp-controller="Category" asp-route-id="@category.Id">@category.Title</a>
                        </li>
                    }
                </ul>
            </div>
            <div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h2 class="mb-0">Posts</h2>
                    <a asp-action="Create" asp-controller="Post" class="btn btn-primary btn-sm">Add</a>
                </div>
                <ul class="list-group">
                    @foreach (var post in Model.Posts)
                    {
                        <li class="list-group-item">
                            <a asp-action="Edit" asp-controller="Post" asp-route-id="@post.Id">@post.Title</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>